@model Albert_Saves_The_Planets_2.Models.ViewModels.PageContentsViewModel
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor httpContextAccessor;
@{
    ViewData["Title"] = "Start!";
    List<string> planetSessions = new List<string>()
    { "EarthSaved", "MarsSaved", "MercurySaved", "VenusSaved", "JupiterSaved", "SaturnSaved", "UranusSaved", "PlutoSaved", "NeptuneSaved" };
    foreach(string ps in planetSessions)
    {
        httpContextAccessor.HttpContext.Session.SetString(ps, "False");
    }
    httpContextAccessor.HttpContext.Session.SetInt32("PlanetsSaved", 0);
}



<div class="text-center">
    <h1 class="display-4">@Model.Contents.First(t => t.Name.Equals("MainTitle")).Text</h1>
    <!--<p>Model.Contents.First(t => t.Name.Equals("WelcomeText")).Text</p>-->
</div>

